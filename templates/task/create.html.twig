{% extends 'base.html.twig' %}
{% block title %}
	{% if edit is defined %}
		Edit Task
	{% else %}
		Create Task
	{% endif %}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h2>
			{% if edit is defined %}
				Edit Task
			{% else %}
				Create Task
			{% endif %}
		</h2>

		{{ form_start(form) }}
		{{ form_widget(form) }}
		{{ form_end(form) }}
	</div>
{% endblock %}
